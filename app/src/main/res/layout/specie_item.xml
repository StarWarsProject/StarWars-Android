<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="specieItem"
            type="com.example.starwarsapp.data.local.models.SpecieEntity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blackGradient"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{specieItem.name}"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Human"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{specieItem.classification}"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="sentient"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{specieItem.language}"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Galactic Basic"
            />

    </LinearLayout>
</layout>